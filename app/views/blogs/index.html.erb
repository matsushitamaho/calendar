<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h3>予定の追加</h3>
      <%= form_with(model: @blog, local: true) do |form| %>
        <div class="title">
          <div class="form-tag">タイトル</div>
          <%= form.text_field :title %>
        </div>
        
        <div class="content">
          <div class="form-tag">内容</div>
          <%= form.text_field :content %>
        </div>
        
        <div class="time">
          <div class="form-tag">時間</div>
          <%= form.datetime_select :start_time %>
        </div>
        
        <div class="submit">
          <%= form.submit %>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-8">
      <%= month_calendar events: @blogs do |date, blogs| %>
        <%= date.day %>
        
        <% blogs.each do |blog| %>
          <div><%= link_to blog.title, blog %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>