<div class="show">
  <h1>
    <%= @blog.start_time.strftime("%m月%d日") %>
  </h1>
  
  <p>
    <strong>タイトル</strong>
    <%= @blog.title %>
  </p>
  
  <p>
    <strong>内容</strong>
    <%= @blog.content %>
  </p>
  
  <%= link_to "編集", edit_blog_path(@blog) %>
  <%= link_to "消去", blog_path(@blog.id), data: { turbo_method: :delete } %>
  <%= link_to "戻る", blogs_path %>
</div>